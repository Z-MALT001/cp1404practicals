BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '34'
            font_size: 48
            on_text: app.handle_calculation()
        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.increment_input(1)
            Button:
                text: 'Down'
                on_press: app.increment_input(-1)
    Button:
        text: 'Convert miles to km'
        on_press: app.handle_calculation()
    Label:
        id: output_label
        text: '57.11'
        font_size: 48
        color:(1, 1, 0, 1)

